{
  "name": "afritokeni",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --force",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "format": "prettier --write .",
    
    "backend:build": "tsc --project tsconfig.backend.json",
    "backend:start": "node dist/services/server.js",
    
    "sms:dev": "tsx src/services/smsServer.ts",
    "sms:build": "tsc --project tsconfig.backend.json",
    "sms:start": "node dist/services/smsServer.js",
    
    "juno:dev:start": "juno dev start",
    "juno:dev:stop": "juno dev stop",
    "juno:dev:publish": "juno config apply -m development",
    "juno:dev:login": "juno login --mode development --emulator",
    
    "data:seed": "tsx scripts/primeDemoData.ts",
    
    "test:unit": "NODE_ENV=unit-test cucumber-js 'tests/features/ussd-*.feature' --require 'tests/setup.ts' --require 'tests/features/step-definitions/*.ts' --require-module tsx",
    "test:integration": "npm run icp:start && npm run icp:deploy && NODE_ENV=integration DFX_NETWORK=local cucumber-js 'tests/features/integration-*.feature' --require 'tests/setup.ts' --require 'tests/features/step-definitions/*.ts' --require-module tsx",
    "test:all": "npm run test:unit && npm run test:integration",
    
    "icp:start": "dfx start --clean --background",
    "icp:stop": "dfx stop",
    "icp:deploy": "dfx deploy ckbtc_ledger && dfx deploy ckusdc_ledger",
    
    "postinstall": "npm run postinstall:copy-auth",
    "postinstall:copy-auth": "node -e \"require('fs').cpSync('node_modules/@junobuild/core/dist/workers/', './public/workers', {recursive: true});\""
  },
  "dependencies": {
    "@dfinity/agent": "^3.2.7",
