{
  "compilerOptions": {
   "target": "ES2020",
    "module": "ES2020",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false
  },
  "include": [
    "src/services/server.ts",
    "src/services/webHookServices.ts",
    "src/services/ckBTCService.ts",
    "src/functions/notifications.ts",
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components",
    "src/pages"
  ]
}